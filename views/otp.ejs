<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- font awesome cdn -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>

    <!-- bootstrap cdn -->
    <link rel = "stylesheet" href = "https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src = "https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>

    <!-- custom css -->
    <link rel="stylesheet" href="/css/index.css">
    
    <title>Vaccine Notification</title>
</head>
<body>
    <%- include('partials/successMsg.ejs') %>
    <%- include('partials/errorMsg.ejs') %>
    <div class="container">
        <form class="shadow-lg p-3 mb-5 bg-white " action="/otp/verify" method="get">
            <div class="form-group">
                <label for="mobile">Mobile Number:</label>
                <div class="form-control" id="mobile" ></div>
            </div>
            <div class="form-group">
                <label for="otp">One Time Password:</label>
                <input class="form-control" type="text" pattern="^[0-9]{6}$" title="Enter a vaild 6 digit OTP" id="otp" name="otp" placeholder="OTP" required onkeypress="return onlyNumberKey(event)">
            </div>
            <div>
                <button class="btn btn-primary " type="submit">Verify OTP</button>
            </div>
        </form>
    </div>
    <script src="/js/onlyNumber.js"></script>
    <script src="/js/populateMobile.js"></script>
    <script src="/js/messageClose.js"></script>
</body>
</html>